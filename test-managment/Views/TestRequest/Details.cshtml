@model test_managment.Models.TestRequestVM

@{
    ViewData["Title"] = "Details";
}

<h1>Review @Model.RequestingPatient.FirstName @Model.RequestingPatient.LastName 's Test Request </h1>
<h4>
    @Html.DisplayNameFor(model => model.DateRequested) : @Html.DisplayFor(model => model.DateRequested)

</h4>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RequestingPatient.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RequestingPatient.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RequestingPatient.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RequestingPatient.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TestDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TestDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TestType.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TestType.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateActioned)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateActioned)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Approved)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Approved)
        </dd>
    </dl>
</div>
<div>
    @if (Model.Approved == null)
    {
        <a class="btn btn-success" asp-action="ApproveRequest" asp-route-id="@Model.Id">
            <i class="fa fa-check"></i> Approve
        </a>
        <a class="btn btn-danger" asp-action="RejectRequest" asp-route-id="@Model.Id">
            <i class="fa fa-remove"></i> Reject
        </a>
    }
    <a class="btn btn-outline-secondary" asp-action="Index">
        <i class="fa fa-arrow-left"></i> Back to List
    </a>
</div>
