@using Microsoft.AspNetCore.Identity
@using test_managment.Data
@inject SignInManager<Patient> SignInManager
@inject UserManager<Patient> UserManager

<ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            <i class="fas fa-user-alt"></i>
            <p>
                @User.Identity.Name
            </p>
        </a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-white">
                <i class="fas fa-sign-out-alt"></i>
                <p>
                    Logout
                </p>
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">
            <i class="fa fa-registered"></i>
            <p>
                Register
            </p>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">
            <i class="fas fa-user-alt"></i>
            <p>
                Login
            </p>
        </a>
    </li>
}
</ul>




